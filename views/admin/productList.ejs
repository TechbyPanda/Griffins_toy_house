                                <th><%=product.pname%></th>
                                <th><%=product.product_price%></th>
                                <th><%=product.product_stock%></th>
                                <th><%=product.description%></th>
                                <th><%=product.date%></th>
                                
                    <th>
                        <a href="/product/edit-product/<%=product.id%>">
                        <button class="btn btn-primary">Edit</button>
                    </a>
                    </th>
                    <th>  <a href="/delete">
                        <button class="btn btn-danger">Delete</button>
                    </a></th>
                            </tr>
                            <%}%>
                    </tbody>
            </table>
        </div>
       
    </body>
</html>