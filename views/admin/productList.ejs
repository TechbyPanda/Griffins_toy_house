<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <%- include('../partial/_bootstrap.ejs')%>
    </head>
    <body>
        <div class="cantainer">
            <table class="table">
                <thead><tr><th>Sno.</th>
                    <th>Product Name</th>
                    <th>Category Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                    <th>Add date</th>
            
                    <tbody>
